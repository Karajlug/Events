      <div class="navbar-inner">
        <div class="container" id="topmenu">
          <div class="row">
	        <div class="span12">
              <a class="brand" href="/"><b><%=  _("SFD") %></b></a>
              <ul class="nav">
                <li><a href="http://karajlug.org/"><%= _("Home") %></a></li>
                <li><a href="/gallery"><%= _("Gallery") %></a></li>
              </ul>

              <ul class="nav pull-right">
                <% if I18n.locale == :fa %>
                <li><a href="/en"><%= _("English") %></a></li>
                <% else %>
                <li><a href="/fa"><%= _("Persian") %></a></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="maincontainer">
      <%= yield %>
    </div>

    <footer>
