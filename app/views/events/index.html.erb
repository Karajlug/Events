
<section class="sponsors" id="events">
<div class="container">
  <div class="row">
    <div class="span6 event-list">
      <h1 class="text-center"><%=t :future_events %></h1>
      <% if @future_events.count > 0 %>
        <ul>
          <% @future_events.each do |event| %>
            <li>[<%= event.datetime.strftime("%Y/%m/%d") %>] <a href="<%= show_event_path(event) %>"><%= event.name %></a></li>
          <% end %>
        </ul>
      <% else %>
        <p><%=t :no_event %>
      <% end %>
    </div>
    <div class="span6 event-list">
      <h1 class="text-center"><%=t :past_events %></h1>
      <% if @past_events.count > 0 %>
        <ul>
          <% @past_events.each do |event| %>
            <li>[<%= event.datetime.strftime("%Y/%m/%d") %>] <a href="<%= show_event_path(event) %>"><%= event.name %></a></li>
          <% end %>
        </ul>
      <% else %>
        <p><%=t :no_event %></p>
      <% end %>
    </div>
  </div>
</div>
</section>
