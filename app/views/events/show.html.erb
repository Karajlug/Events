<section id="last-event">
  <div class="content">
    <div class="row">
      <div class="span10 offset1">
        <h2><%= @event.name %></h2>
        <% if @event.finished? %><span><%=t :been_held %></span><% end %>
        <p><%= @event.description %></p>
        <p><%=t :time_string %>: <strong><%= @event.datetime.to_formatted_s(:long_ordinal) %></strong></p>
        <p><%=t :address %>: <strong><%= @event.address %></strong></p>

      </div>
    </div>
  </div>
</section>
