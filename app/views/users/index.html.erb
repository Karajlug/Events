<div class="row">
  <div class="span12">
    <h2><%=t :welcome %></h2>
  </div>
</div>
<div class="row">
  <div class="span12">
    <h1><%= @days %> <%=t :ramaining_msg %></h1>
  </div>
</div>

<%= form_for(@user) do |f| %>
<div class="box row">
  <div class="span6 offset3">
    <% flash.each do |key, value| %>
    <div class="text-<%= key %>"><%= value %></div>
    <% end %>

      <%= f.text_field :email, placeholder: t(:email), class: "span4", id: :email %>
      <%= f.submit t(:submit), class: "btn", id: "submit" %>

  </div>
</div>
<% end %>

<%= debug(params) if Rails.env.development? %>
