
<section class="address">
  <div class="intro">
    <div class="logo">
    </div>
    <h1><%=t :karaj_lug_running_sfd %></h1>
    <h3><%=t :sfd_2013_celebration %></h3>
  </div>
  <div class="days">
    <h1><%= @days %></h1>
    <br />
    <h2><%=t :ramaining_msg %></h2>
    <br /><br />
    <%= form_for(@user) do |f| %>
      <div class="regform">

        <% flash.each do |key, value| %>
          <div class="text-<%= key %>"><%= value %></div>
        <% end %>
        <div class="forminput">
        <%= f.text_field :email, placeholder: t(:email) + " ...", id: :email %><br />
        <span><%=t :form_msg %></span> <%= f.submit t(:submit), class: "btn btn-success", id: "submit" %>
        </div>

      </div>
  </div>

  <% end %>

</section>


<section class="sponsors">
  <div class="container">
      <h1><%=t :sponsors %>:</h1>
  </div>
</section>
